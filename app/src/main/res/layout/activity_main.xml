<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="100"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:weightSum="100"
      android:layout_height="match_parent"
      >

      <TextView
          android:id="@+id/text"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="20"
          android:textColor="#B3B0B0"
          android:textSize="25sp"
          android:textStyle="bold"
          />
      <LinearLayout
          android:orientation="horizontal"

          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="80"
          android:weightSum="100"
          >

          <LinearLayout

              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="75"
              android:weightSum="4"
              >

              <!--Buttons-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:weightSum="3"
                  android:layout_weight="1"
                  android:orientation="horizontal"

                  >
                  <Button
                      android:id="@+id/seven"
                      android:background="@drawable/magic"
                      android:text="7"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/eight"
                      android:text="8"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:text="9"
                      android:id="@+id/nine"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />



              </LinearLayout>

              <LinearLayout

                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:weightSum="3"
                  android:layout_weight="1"
                  android:orientation="horizontal"

                  >


                  <Button
                      android:id="@+id/four"
                      android:text="4"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/five"
                      android:text="5"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/six"
                      android:text="6"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />


              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:weightSum="3"
                  android:layout_weight="1"
                  android:orientation="horizontal"

                  >


                  <Button
                      android:id="@+id/one"
                      android:text="1"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/two"
                      android:text="2"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/three"
                      android:text="3"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />


              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:weightSum="3"
                  android:layout_weight="1"
                  android:orientation="horizontal"

                  >


                  <Button
                      android:text="."
                      android:id="@+id/dot"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/zero"
                      android:text="0"
                      android:textStyle="bold"
                      android:textSize="45sp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />
                  <Button
                      android:id="@+id/clear"
                      android:text="clear"
                      android:textStyle="italic"
                      android:textSize="25dp"
                      android:textColor="#fff"
                      android:background="@drawable/magic"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"

                      />


              </LinearLayout>




          </LinearLayout>

          <LinearLayout
              android:background="@color/colorPrimaryDark"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="25"
              android:weightSum="5"
              android:orientation="vertical"
              >
              <Button
                  android:id="@+id/equals"
                  android:background="@color/colorPrimaryDark"
                  android:text="="
                  android:textStyle="bold"
                  android:textSize="40sp"
                  android:textColor="#fff"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <Button
                  android:id="@+id/div"
                  android:background="@color/colorPrimaryDark"
                  android:text="/"
                  android:textStyle="bold"
                  android:textSize="40sp"
                  android:textColor="#fff"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <Button
                  android:id="@+id/multi"
                  android:background="@color/colorPrimaryDark"
                  android:text="*"
                  android:textStyle="bold"
                  android:textSize="40sp"
                  android:textColor="#fff"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <Button
                  android:id="@+id/minus"
                  android:background="@drawable/magic"
                  android:text="-"
                  android:textStyle="bold"
                  android:textSize="40sp"
                  android:textColor="#fff"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />

              <Button
                  android:id="@+id/plus"
                  android:background="@drawable/magic"
                  android:text="+"
                  android:textStyle="bold"
                  android:textSize="40sp"
                  android:textColor="#fff"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />



          </LinearLayout>

      </LinearLayout>


  </LinearLayout>


</RelativeLayout>